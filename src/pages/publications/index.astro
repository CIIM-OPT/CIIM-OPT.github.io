---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import HeroSection from '../../components/HeroSection.astro';

const posts = [
  {
    id: 'anticonvulsant-macamides',
    title: 'Anticonvulsant Effects of Synthetic N-(3-Methoxybenzyl)oleamide and N-(3-Methoxybenzyl)linoleamide Macamides: An In Silico and In Vivo Study',
    excerpt: 'This study evaluates the anticonvulsant properties of novel synthetic macamides through computational and animal model analyses, indicating their potential therapeutic applications.',
    date: '2025-01-15',
    author: 'PhD. Badhin Gómez Valdez',
    category: 'Research',
    url: 'https://www.mdpi.com/1420-3049/30/2/333'
  },
  {
    id: 'yap1-parp1-inhibitors-glioblastoma',
    title: 'A Theoretical Study on the Efficacy and Mechanism of Combined YAP-1 and PARP-1 Inhibitors in the Treatment of Glioblastoma Multiforme Using Peruvian Maca Lepidium meyenii',
    excerpt: 'This theoretical research explores the combined use of YAP-1 and PARP-1 inhibitors derived from Peruvian Maca in treating glioblastoma multiforme, suggesting enhanced therapeutic efficacy.',
    date: '2024-01-10',
    author: 'PhD. Badhin Gómez Valdez',
    category: 'Research',
    url: 'https://www.mdpi.com/1467-3045/47/1/40'
  },
  {
    id: 'parp1-inhibitors-breast-cancer',
    title: 'A Theoretical Study of the Interaction of PARP-1 with Natural and Synthetic Inhibitors: Advances in the Therapy of Triple-Negative Breast Cancer',
    excerpt: 'This study investigates the interactions between PARP-1 and various inhibitors, providing insights into potential advancements in treating triple-negative breast cancer.',
    date: '2023-09-15',
    author: 'PhD. Badhin Gómez Valdez',
    category: 'Research',
    url: 'https://www.mdpi.com/1467-3045/46/9/558'
  },
  {
    id: 'rv1417-rv2617c-nicotine-derivatives',
    title: 'Study of the Rv1417 and Rv2617c Membrane Proteins and Their Interactions with Nicotine Derivatives as Potential Inhibitors of Erp Virulence-Associated Factor in Mycobacterium tuberculosis: An In Silico Approach',
    excerpt: 'This in silico study analyzes the interactions between specific membrane proteins and nicotine derivatives, aiming to identify potential inhibitors of virulence factors in Mycobacterium tuberculosis.',
    date: '2023-01-28',
    author: 'PhD. Badhin Gómez Valdez',
    category: 'Research',
    url: 'https://www.mdpi.com/2218-273X/13/2/248'
  },
  {
    id: 'tetracycline-chloramphenicol-interaction',
    title: 'Theoretical Study at the Molecular Mechanics Level of the Interaction of Tetracycline and Chloramphenicol with the Antibiotic Receptors Present in Enterococcus faecalis (Q839F7) and Streptococcus mutans (Q8DS20)',
    excerpt: 'This theoretical study examines how tetracycline and chloramphenicol interact with specific antibiotic receptors, providing insights into bacterial resistance mechanisms.',
    date: '2022-11-15',
    author: 'PhD. Badhin Gómez Valdez',
    category: 'Research',
    url: 'https://www.mdpi.com/2079-6382/11/11/1640'
  },
  {
    id: 'polymer-nanoparticles-drug-delivery',
    title: 'Design and Evaluation of Polymer-Based Nanoparticles for Targeted Drug Delivery in Cancer Therapy',
    excerpt: 'This research focuses on designing polymer-based nanoparticles to enhance targeted drug delivery in cancer therapy, aiming to improve treatment efficacy and reduce side effects.',
    date: '2022-07-10',
    author: 'PhD. Badhin Gómez Valdez',
    category: 'Research',
    url: 'https://www.mdpi.com/2073-4360/14/13/2577'
  }
];

const categories = [...new Set(posts.map(post => post.category))];
---

<Layout title="Publications - CIIM" description="Latest product updates, feature releases, and company news from SaaSify.">
  <Header />
  <main>
    <HeroSection 
      title="Latest Publications and Research" 
      highlightText="Publications"
      description="Stay up to date with our latest Publications."
    />
    
    <!-- Category Filter -->
    <div class="container-custom py-8">
      <div class="flex flex-wrap gap-4 justify-center mb-12">
        <a href="#" class="px-4 py-2 rounded-full bg-primary-600 text-white font-medium text-sm hover:bg-primary-700 transition-colors">
          All Publications
        </a>
        {categories.map((category) => (
          <a href={'#' + category.toLowerCase().replace(/\s+/g, '-')} class="px-4 py-2 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 font-medium text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
            {category}
          </a>
        ))}
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post, index) => (
          <div class="card border border-gray-200 dark:border-gray-700 overflow-hidden slide-up" style={'animation-delay: ' + (index * 100) + 'ms'}>
            <a href={post.url} target="_blank" rel="noopener noreferrer" class="block">
            </a>
            <div class="p-6">
              <div class="flex items-center mb-4">
                <span class="text-sm font-medium text-primary-600 dark:text-primary-400">{post.category}</span>
                <span class="mx-2 text-gray-300 dark:text-gray-600">•</span>
                <span class="text-sm text-gray-500 dark:text-gray-400">{post.date}</span>
              </div>
              <a href={post.url} target="_blank" rel="noopener noreferrer" class="block mb-3">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors">{post.title}</h2>
              </a>
              <p class="text-gray-600 dark:text-gray-300 mb-6">{post.excerpt}</p>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-12 flex justify-center">
        <a href="#" class="btn-outline">
          Load More Articles
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v10.586l3.293-3.293a1 1 0 011.414 1.414l-5 5a1 1 0 01-1.414 0l-5-5a1 1 0 111.414-1.414L9 14.586V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
